[
  {
    "fields": [
      {
        "validation": [
          {
            "rules": [
              {
                "flag": "presence",
                "constraint": "required"
              }
            ],
            "level": "error"
          }
        ],
        "name": "title",
        "type": "string"
      },
      {
        "rows": 2,
        "description": "Short summary for grid card (1-2 sentences)",
        "name": "excerpt",
        "type": "text"
      },
      {
        "rows": 5,
        "description": "Full description for popup",
        "name": "description",
        "type": "text"
      },
      {
        "validation": [
          {
            "rules": [
              {
                "flag": "uri",
                "constraint": {
                  "options": {
                    "scheme": [
                      "/^http$/",
                      "/^https$/"
                    ],
                    "allowRelative": false,
                    "relativeOnly": false,
                    "allowCredentials": false
                  }
                }
              }
            ],
            "level": "error"
          }
        ],
        "description": "External project URL (optional)",
        "name": "link",
        "type": "url",
        "title": "Project Link"
      },
      {
        "initialValue": 0,
        "description": "Lower numbers appear first",
        "name": "order",
        "type": "number",
        "title": "Display Order"
      },
      {
        "validation": [
          {
            "rules": [
              {
                "flag": "min",
                "constraint": 1
              },
              {
                "flag": "max",
                "constraint": 5
              }
            ],
            "level": "error"
          }
        ],
        "of": [
          {
            "fields": [
              {
                "options": {
                  "hotspot": true
                },
                "name": "image",
                "type": "image"
              },
              {
                "name": "caption",
                "type": "string"
              }
            ],
            "type": "object"
          }
        ],
        "name": "gallery",
        "type": "array",
        "title": "Gallery Images"
      }
    ],
    "name": "project",
    "type": "document",
    "title": "Portfolio Project"
  }
]